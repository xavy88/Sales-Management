@model Sales_Management_Web.Models.VM.ServiceCreateVM
<style>
    .card-registration .select-input.form-control {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
    }

    .card-registration .select-arrow {
        top: 13px;
    }

    input.form-control, textarea.form-control-lg {
        border-color: #ce8035;
    }
</style>

<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>

                        <div class="col-xl-6">
                            <form asp-action="Create">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase text-brand"><i class="bi bi-node-plus-fill"></i> Create</h3>

                                    <div class="row">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input autofocus asp-for="Service.Name" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                                <span asp-validation-for="Service.Name" class="text-danger"></span>
                                                <label asp-for="Service.Name" class="form-label" for="form3Example1m">Service</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input asp-for="Service.PriceRange" type="text" id="form3Example1n" class="form-control form-control-lg" />
                                                <span asp-validation-for="Service.PriceRange" class="text-danger"></span>
                                                <label asp-for="Service.PriceRange" class="form-label" for="form3Example1n">Price Range</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Service.DepartmentId" class="form-label">Department</label>
                                        <select asp-for="Service.DepartmentId" class="form-select" asp-items="@Model.DepartmentList">
                                            <option disabled selected>--Select Department</option>
                                        </select>
                                        <span asp-validation-for="Service.DepartmentId" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <textarea asp-for="Service.Description" type="text" id="form3Example8" class="form-control form-control-lg"></textarea>
                                        <span asp-validation-for="Service.Description" class="text-danger"></span>
                                        <label asp-for="Service.Description" class="form-label" for="form3Example8">Description</label>
                                    </div>


                                    <div class="row">
                                    </div>
                                    <div class="d-flex justify-content-end pt-3">
                                        <a asp-action="Index" class="btn btn-secondary form-control btn-lg"><i class="bi bi-arrow-return-left"></i> Back to list</a>
                                        <button type="submit" class="btn btn-primary btn-lg ms-2 form-control"><i class="bi bi-bookmark-plus-fill"></i> Create</button>

                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}