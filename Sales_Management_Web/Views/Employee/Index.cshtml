@model IEnumerable<Sales_Management_Web.Model.DTO.EmployeeDTO>

    <br />
    <div class="container p-4 border">
        <div class=row pb-2>
            <div class="col">
                <h1 class="text-primary"><i class="bi bi-card-checklist"></i> Employee List</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> New</a>
            </div>
        </div>

        <table id="dataTable" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Hired Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Department.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                     <td>@((item.HiredDate.ToString("yyyy-MM-dd")))</td>
                    <td>@if (@item.Status)
                        {
                            <i class="bi bi-check2 text-success fw-bold"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle text-danger fw-bold"></i>
                        }    
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>

     @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }