@model Sales_Management_Web.Models.VM.EmployeeCreateVM

<form asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class = "text-danger"></div>
        
         <div class="col-2">
            <label asp-for="Employee.Name" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Employee.Name" class="form-control" />
            <span asp-validation-for="Employee.Name" class="text-danger"></span>
        </div>
        <div class="col-2">
            <label asp-for="Employee.DepartmentId" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <select asp-for="Employee.DepartmentId" class="form-select" asp-items="@Model.DepartmentList">
                <option disabled selected>--Select Department</option>
            </select>
            <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
        </div>
        <div class="col-2">
            <label asp-for="Employee.HiredDate" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input type="date" asp-for="Employee.HiredDate" class="form-control" />
            <span asp-validation-for="Employee.HiredDate" class="text-danger"></span>
        </div>
         <div class="col-2">
            <label asp-for="Employee.Email" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Employee.Email" class="form-control" />
            <span asp-validation-for="Employee.Email" class="text-danger"></span>
        </div>
         <div class="col-2">
            <label asp-for="Employee.Phone" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Employee.Phone" class="form-control" />
            <span asp-validation-for="Employee.Phone" class="text-danger"></span>
        </div>
        <div class="col-2">
            <label asp-for="Employee.Remark" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <textarea asp-for="Employee.Remark" class="form-control"></textarea>
            <span asp-validation-for="Employee.Remark" class="text-danger"></span>
        </div>
        <div class="col-5 offset-2">
            <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
            
        </div>
        <div class="col-5">
            <input type="submit" value="Create" class="btn btn-success form-control" />
        </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}