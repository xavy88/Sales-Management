@model Sales_Management_Web.Models.VM.OrderDeleteVM

<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete</h1>
        <hr />
        <input hidden asp-for="Order.Id" />
        <div class="row">
            <div asp-validation-summary="All" class = "text-danger"></div>
        
         <div class="col-2">
            <label asp-for="Order.Reference" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Order.Reference" disabled class="form-control" />
        </div>
