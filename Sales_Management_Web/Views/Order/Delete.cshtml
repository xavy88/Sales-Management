            <input asp-for="Order.Duration" disabled class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Order.Price" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Order.Price" disabled class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Order.Remark" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <textarea asp-for="Order.Remark" disabled class="form-control"></textarea>
        </div>
        <div class="col-5 offset-2">
            <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
            
        </div>
        <div class="col-5">
            <input type="submit" value="Delete" class="btn btn-success form-control" />
        </div>
        </div>
    </div>
