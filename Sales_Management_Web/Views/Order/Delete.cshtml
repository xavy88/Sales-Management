        </div>
        <div class="col-10 pb-3">
            <select asp-for="Order.ServiceId" disabled class="form-select" asp-items="@Model.ServiceList">
                <option disabled selected>--Select Service</option>
            </select>
        </div>
        <div class="col-2">
            <label asp-for="Order.StartDate" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input type="date" disabled asp-for="Order.StartDate" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Order.EndDate" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input type="date" disabled asp-for="Order.EndDate" class="form-control" />
