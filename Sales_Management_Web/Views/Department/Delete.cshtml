@model Sales_Management_Web.Model.DTO.DepartmentDTO
<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete</h1>
        <hr />
        <input hidden asp-for="Id" />
        <div class="row">
        
        <div class="col-2">
            <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
        </div
        <div class="col-10 pb-3">
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
        </div
        <div class="col-10 pb-3">
            <textarea asp-for="Description" disabled class="form-control"></textarea>
        </div>
        <div class="col-5 offset-2">
            <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
            
        </div>
        <div class="col-5">
            <input type="submit" value="Delete" class="btn btn-danger form-control" />
        </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}