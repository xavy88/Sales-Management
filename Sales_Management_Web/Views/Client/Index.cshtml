@model IEnumerable<Sales_Management_Web.Model.DTO.ClientDTO>

    <br />
    <div class="container p-4 border">
        <div class=row pb-2>
            <div class="col">
                <h1 class="text-primary"><i class="bi bi-card-checklist"></i> Client List</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> New</a>
            </div>
        </div>

        <table id="dataTable" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Web Site</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach(var dpt in Model)
            {
                <tr>
                    <td>@dpt.CompanyName</td>
                    <td>@dpt.ContactName</td>
                    <td>@dpt.Email</td>
                    <td>@dpt.Website</td>
                    <td>@dpt.Phone</td>
                    <td>@if (@dpt.Status)
                        {
                            <i class="bi bi-check2"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle"></i>
                        }    
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@dpt.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-action="Delete" asp-route-id="@dpt.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>

     @section Scripts{
        <script>
        $(document).ready( function () {
        $('#dataTable').DataTable();
        } );
        </script>

    }